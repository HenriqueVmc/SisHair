@model SisHair.Presentation.Web.MVC.Old.Models.Servico

@{
    ViewBag.Title = "Editar | Serviço";
    Layout = "~/Views/Shared/MasterAdiministrador.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h3 class="text-center">Editar de Serviço</h3>
    <hr />
    <div class="row">
        <div class="form-horizontal col-md-12">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-8">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2">
                    @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2">
                    @Html.LabelFor(model => model.Duracao, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.Duracao, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Duracao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
    </div>
    <hr>
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                <div class="col-md-10">
                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Salvar</button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-dark">
                        <span class="fa fa-arrow-circle-left"></span> Lista de Serviços
                    </a>
                </div>
            </div>
        </div>
    </div>
}

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}