@model SisHair.Presentation.Web.MVC.Old.Models.Cargo

@{
    ViewBag.Title = "Editar | Cargo";
    Layout = "~/Views/Shared/MasterAdiministrador.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h3 class="text-center">Editar de Cargo</h3>
    <hr />
    <div class="row">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-6">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
    <hr>
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                <div class="col-md-10">
                    <button class="btn btn-success" type="submit"><i class="fa fa-save"></i> Salvar</button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-dark">
                        <span class="fa fa-arrow-circle-left"></span> Lista de Cargos
                    </a>
                </div>
            </div>
        </div>
    </div>
}

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}