@model IEnumerable<TrabalhoTcc.Models.Solicitacao>

@{
    ViewBag.Title = "Solicitacoes";
    Layout = "~/Views/Shared/MasterAdiministrador.cshtml";
}
@section styles{
    <link href="~/Content/datatables.net/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/datatables.net/buttons.dataTables.min.css" rel="stylesheet" />
}
<h3 class="text-center">Solicitações:</h3>

<a href="@Url.Action("ExportExcel")" class="btn btn-outline-success">
    <span class="fa fa-download "></span> Exportar para Excel
</a>

<div class="x_panel">

    <table id="tableSolicitacoes" class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayName("Cliente:")
                </th>
                <th>
                    @Html.DisplayName("Funcionário:")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataHoraInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataHoraFinal)
                </th>
                <th>
                    @Html.DisplayName("Serviços:")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Situacao)
                </th>
                <th>Ações:</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Funcionario.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataHoraInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataHoraFinal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Servicos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Situacao)
                    </td>
                    <td>
                        @*@Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
        @Html.ActionLink("Detalhes", "Detalhes", new { id = item.Id }) |*@
                        @Html.ActionLink(" ", "CancelarSolicitacao", new { id = item.Id }, new { @class = "fa fa-trash btn btn-danger" })
                        @Html.ActionLink(" ", "SalvarSolicitacao", new { id = item.Id }, new { @class = "fa fa-check btn btn-success" })
                    </td>
                </tr>

            }
        </tbody>
        <tfoot></tfoot>
    </table>

</div>

@section scripts{

    <script src="~/Content/datatables.net/jquery.dataTables.min.js"></script>

    <script src="~/Content/datatables.net/dataTables.buttons.min.js"></script>
    <script src="~/Content/datatables.net/buttons.flash.min.js"></script>
    <script src="~/Content/datatables.net/buttons.html5.min.js"></script>
    <script src="~/Content/datatables.net/buttons.print.min.js"></script>

    <script src="~/Scripts/historico/index.js"></script>

}
