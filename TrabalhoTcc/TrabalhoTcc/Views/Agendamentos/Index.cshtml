@model TrabalhoTcc.Models.Agendamento
@{
    Layout = "~/Views/Shared/MasterAdiministrador.cshtml";
}

<div class="offset-2 mt-3">
    <div id="agenda"></div>

    <div id="agendamento-modal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Agendamento do <span id="eventTitle"></span></h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <p id="pDetails"></p>
                </div>
                <div class="modal-footer">

                    <button id="btnDeletar" class="btn btn-danger btn-sm pull-right" style="margin-right:5px;">
                        <span class="glyphicon glyphicon-remove"></span> Deletar
                    </button>

                    <button id="btnEditar" class="btn btn-warning btn-sm pull-right" style="margin-right:5px;">
                        <span class="glyphicon glyphicon-pencil"></span> Editar
                    </button>
                    <button id="btnPagar" class="btn btn-success btn-sm pull-right" style="margin-right:5px;">
                        <span class="glyphicon glyphicon-usd"></span> Pagar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div id="agendamento-modal-salvar" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Savar Agendamento</h4>
                    <button type="button" class="close pull-right" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">

                    <input type="hidden" id="Id" value="0" />

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Funcionários:</label>
                                @Html.DropDownList("FuncionarioId", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                            <div class="col-md-6">
                                <label>Clientes:</label>
                                <select name="ClienteId" id="ClienteId" class="custom-select"></select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Horário de Início:</label>
                                <div class="input-group date" id="dtDataHoraInicio">
                                    <input type="text" id="DataHoraInicio" class="form-control" />
                                    @Html.ValidationMessageFor(model => model.DataHoraInicio, "", new { @class = "text-danger" })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label>Horário de Finalização:</label>
                                <div class="input-group date" id="dtDataHoraFinal">
                                    <input type="text" id="DataHoraFinal" class="form-control" />
                                    @Html.ValidationMessageFor(model => model.DataHoraFinal, "", new { @class = "text-danger" })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12">
                                <label>Serviços:</label>
                                <select multiple="multiple" name="states[]" id="selectServicos" class="custom-select"></select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Situação</label>
                        <select id="Situacao" class="custom-select">
                            <option value="Confirmado" selected>Confirmado</option>
                            <option value="Pendente">Pendente</option>
                        </select>
                    </div>

                    <button type="button" id="btnSalvarAgendamento" class="btn btn-success">Salvar</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>