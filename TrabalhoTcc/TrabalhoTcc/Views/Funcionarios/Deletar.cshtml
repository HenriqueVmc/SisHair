@model TrabalhoTcc.Models.Funcionario

@{
    Layout = "~/Views/Shared/MasterAdiministrador.cshtml";
}

<div class="x_panel">
    @if(Model.RegistroFuncionarioAtivo == true)
    {
        <h3>Deseja deletar o registro ou inativa-lo ?</h3>
        <h4>Caso delete o registro, não poderá ser mais recuperado</h4>
        <h5>Caso inative-o, pode o reativar depois futuramente</h5>
    }
    else
    {
        <h3>Deseja deletar o registro ou reativar-lo?</h3>
        <h4>Caso delete o registro, não poderá ser mais recuperado</h4>
        <h5>Caso reative, o Funcionario voltará ser listado como funcionario existente</h5>
    }
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DataNascimento)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Cpf)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cpf)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Telefone)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Telefone)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Celular)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Celular)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Cargo.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cargo.Nome)
            </dd>

        </dl>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-2">
                    @if(Model.RegistroFuncionarioAtivo == true)
                    {
                        using (Html.BeginForm("InativarRegistro", "Funcionarios", FormMethod.Post))
                        {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-actions no-color">
                            <button type="submit" class="btn btn-success btn-block"><i class="fa fa-power-off"></i> Inativar Registro</button>
                        </div>
                        }
                    }
                    else
                    {
                        using (Html.BeginForm("AtivarRegistro", "Funcionarios", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.Id)
                        <div>
                            <button type="submit" class="btn btn-success btn-block"><i class="fas fa-redo">Reativar Registro</i></button>
                        </div>
                        }
                    }
                </div>
        <div class="col-md-10">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button class="btn btn-success" type="submit"><i class="fa fa-trash"></i> Deletar</button>
            <a href="@Url.Action("Index")" class="btn btn-outline-dark">
                <span class="fa fa-arrow-circle-left"></span> Lista de Funcionários
            </a>
        </div>
        }
            </div>
          </div>
       </div>
    </div>
</div>