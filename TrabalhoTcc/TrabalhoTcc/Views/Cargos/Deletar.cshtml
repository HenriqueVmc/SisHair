@model TrabalhoTcc.Models.Cargo
@{
    Layout = "~/Views/Shared/MasterAdiministrador.cshtml";
}

<div class="offset-2">
    <h3>Deseja realmente delegar esse registro?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descricao)
            </dd>

        </dl>
        <hr />
        @using (Html.BeginForm(""))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <button type="submit" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Deletar</button> | 
                @Html.ActionLink(" Lista de Clientes", "Index", "Cargos", new { @class = "fa fa-arrow-circle-left btn btn-outline-primary" })
            </div>

        }
        @using (Html.BeginForm("InativarRegistro", "Cargos", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            <div class="form-actions no-color">
                <button type="submit" class="btn btn-outline-green"><i class="fa fa-pencil"></i> Inativar Registro</button>
                @Html.ActionLink(" Lista de Clientes", "Index", "Cargos", new { @class = "fa fa-arrow-circle-left btn btn-outline-primary" })
            </div>
        }
    </div>
</div>