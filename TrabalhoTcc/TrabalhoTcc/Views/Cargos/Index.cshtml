@model IEnumerable<TrabalhoTcc.Models.Cargo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MasterAdiministrador.cshtml";
}
<div class="offset-2">
    <h2 class="text-center">Cargos:</h2>
    <div class="row">
        <div class="col-md-8">
            <p>
                @Html.ActionLink("Novo Cargo", "Cadastrar", "Cargos", new { @class = "btn btn-success float right mr-2" })
            </p>
        </div>
        <div class="col-md-4">
            <input type="text" id="pesquisa" name="pesquisa" placeholder="Pesquise por uma palavra-chave" class="form-control">
        </div>
    </div>

    <table class="table table-striped" id="tableCargos" number-per-page="5" current-page="0">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>Ações:</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.ActionLink(" Editar", "Editar", "Cargos", new { id = item.Id }, new { @class = "fa fa-pencil btn btn-outline-dark" })
                        @Html.ActionLink(" Detalhes", "Detalhes", "Cargos", new { id = item.Id }, new { @class = "fa fa-file btn btn-outline-primary" })
                        @Html.ActionLink(" Deletar", "Deletar", "Cargos", new { id = item.Id }, new { @class = "fa fa-trash btn btn-outline-danger" })
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>Ações:</th>
            </tr>
        </tfoot>
    </table>

</div>