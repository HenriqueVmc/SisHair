@{
    Layout = "~/Views/Shared/MasterAdiministrador.cshtml";
}

<div class="offset-2">

    <div class="text-center">
        <h1>CADASTRO DE CLIENTES</h1>
    </div>


    <div class="container style=" style="margin-top: 50px">
        <div class="col-md-12">
            <div class="container border">
                <form action="/Adm/Store" class="form-horizontal" method="post">
                    <div class="form-group">
                        <label for="campo-nome">Nome:</label>
                        <span class="text-danger">*</span>

                        <input type="text" class="form-control" name="Cliente.Nome" id="campo-nome" />
                        @Html.ValidationMessage("Cliente.Nome", new { @class = "text-danger"})
                    </div>

                    <div class="form-group">
                        <label for="campo-data-nascimento">Data de Nascimento:</label>
                        <input type="date" class="form-control" name="Cliente.Data_Nascimento" id="campo-data-nascimento" />
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="campo-celular">Celular:</label>
                                <input type="text" class="form-control" name="Cliente.Celular" id="campo-celular" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="campo-telefone">Telefone:</label>
                                <input type="text" class="form-control" name="Cliente.Telefone" id="campo-telefone" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="campo-email">Email:</label>
                        <input type="email" class="form-control" name="Cliente.Email" id="campo-email" />
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="campo-login">Usuário</label>
                                <input type="text" class="form-control" name="Cliente.Login" id="campo-login" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="campo-senha">Senha</label>
                                <input type="password" class="form-control" name="Cliente.Senha" id="campo-senha" />
                            </div>
                        </div>
                    </div>

                    <hr />
                    <div class="row">
                        <div class="col-md-12">

                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-12">
                                    <button type="submit" class="btn btn-outline-success" name="btnEnviar" id="btnEnviar">
                                        <i class="fa fa-save"> Cadastrar</i>
                                    </button>
                                    <button type="reset" class="btn btn-outline-danger float-right" name="btnLimpar" id="btnLimpar">
                                        <i class="fa fa-trash"> Limpar</i>
                                    </button>
                                </div>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>