@model TrabalhoTcc.Models.Solicitacao
@{
    Layout = "~/Views/Shared/Master.cshtml";
}
<div class="container mt-3 mb-3">
    <div class="row">
        <input type="hidden" id="ClienteId" name="ClienteId" value="@ViewBag.ClienteId" />
        <table class="table table-striped table-hover">
            <a href="~/Views/Solicitacao/Agendamento.cshtml">~/Views/Solicitacao/Agendamento.cshtml</a>
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Cabeleireiros</th>
                    <th scope="col">Agendamento</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>

            <tbody scope="row">
                @foreach (var funcionario in ViewBag.Funcionarios)
                {
                    <tr>
                        <!-- Cabeleireiro -->
                        <td>
                            <blockquote>
                                <div class="row">
                                    <div class="col-md-3 text-center">
                                        <img class="img-circle" src="https://seletronic.com.br/noticias/wp-content/uploads/sites/4/2017/11/beautiful-black-girl-selfie.jpg" style="width:110px;height:100px;">
                                        <!--<img class="img-circle" src="https://s3.amazonaws.com/uifaces/faces/twitter/kolage/128.jpg" style="width: 100px;height:100px;">-->
                                    </div>
                                    <div class="col-md-9">
                                        <h4>@funcionario.Nome</h4>
                                        <small>@funcionario.Cargo.Nome</small>
                                        <hr />
                                        <div class="row">
                                            <div id="redes-sociais" class="col-md-12">
                                                <div class="">
                                                    <a href="#" class="fa fa-facebook"></a>
                                                    <a href="#" class="fa fa-whatsapp"></a>
                                                    <a href="#" class="fa fa-instagram"></a>
                                                    <a href="#" class="fa fa-snapchat-ghost"></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </blockquote>
                        </td>
                        <!-- Solicitar Agendamento -->
                        <td>
                            <div class="row">
                                <div class="col-md-6">
                                    <p>Data:</p>
                                    @Html.TextBoxFor(m => m.Data, new { @class = "form-control", @type = "date" })
                                    @Html.ValidationMessageFor(m => m.Data, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6">
                                    <p>Horario:</p>
                                    @Html.TextBoxFor(m => m.HoraInicio, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.HoraInicio, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-12">
                                    <p>Descrição:</p>
                                    @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Descricao, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </td>
                        <td scope="col">
                            <div class="mt-3" style=" margin-top: 40%;">
                                <!--hidden valuie=idFuncionario-->
                                <!-- Enviar Dados do Agendamento, Cliente e Funcionario para Solicitacoes -->
                                <input type="hidden" id="FuncionarioId" name="FuncionarioId" value="funcionario.Id" />
                                <a href="#" data-id="@funcionario.Id" class="btnSolicitar btn btn-success">Solicitar Agendamento</a>

                                @*@Html.ActionLink("Solicitar Agendamento", "Agendamento", new { id = funcionario.Id }, htmlAttributes: new { @class = "btn btn-success", @id = "btnSolicitar" + funcionario.Id })*@
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

            <tfoot class="thead-dark">
                <tr>
                    <th scope="col">Cabeleireiros</th>
                    <th scope="col">Agendamento</th>
                    <th scope="col">Ações</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

