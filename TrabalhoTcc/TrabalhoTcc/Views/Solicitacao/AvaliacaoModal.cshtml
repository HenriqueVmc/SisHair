@model TrabalhoTcc.Models.Avaliacao
@{
    Layout = null;
}
<div class="modal" tabindex="-1" role="dialog" id="modal-avaliacao">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Agendar Solicitação</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="AgendamentoId" name="AgendamentoId" value="@ViewBag.AgendamentoId" />
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Avaliação: </label>
                            @Html.TextBoxFor(m => m.AvaliacaoUsuario, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AvaliacaoUsuario, "", new { @class = "text-danger" })
                            <div>
                                <label>De 0-5 Estrelas, qual é a chance de voltar novamente ao salão ?</label>
                                <fieldset class="rating">

                                    <input type="hidden" id="NotaVoltarNovamente" name="NotaVoltarNovamente"/>

                                    <input type="radio" id="star20" class="star" value="5" /><label class="full" for="star20"></label>
                                    <input type="radio" id="star19" class="star" value="4" /><label class="full" for="star19"></label>
                                    <input type="radio" id="star18" class="star" value="3" /><label class="full" for="star18"></label>
                                    <input type="radio" id="star17" class="star" value="2" /><label class="full" for="star17"></label>
                                    <input type="radio" id="star16" class="star" value="1" /><label class="full" for="star16"></label>
                                </fieldset>
                            </div>
                            <div>
                                <label>De 0-5 Estrelas, qual é sua nota para o seu Agendamento?</label>
                                <fieldset class="rating">
                                    <input type="hidden" id="NotaAgendamento" name="NotaAgendamento" />

                                    <input type="radio" id="star15" class="star2" value="5" /><label class="full" for="star15"></label>
                                    <input type="radio" id="star14" class="star2" value="4" /><label class="full" for="star14"></label>
                                    <input type="radio" id="star13" class="star2" value="3" /><label class="full" for="star13"></label>
                                    <input type="radio" id="star12" class="star2" value="2" /><label class="full" for="star12"></label>
                                    <input type="radio" id="star11" class="star2" value="1" /><label class="full" for="star11"></label>
                                </fieldset>
                            </div>
                            <div>
                                <label>De 0-5 Estrelas, qualifique como foi a sua experiência no salão?</label>
                                <fieldset class="rating">
                                    <input type="hidden" id="NotaExperienciaAtendimento" name="NotaExperienciaAtendimento">
                                    <input type="radio" id="star10" class="star3" value="5" /><label class="full" for="star10"></label>
                                    <input type="radio" id="star9"  class="star3" value="4" /><label class="full" for="star9"></label>
                                    <input type="radio" id="star8"  class="star3" value="3" /><label class="full" for="star8"></label>
                                    <input type="radio" id="star7"  class="star3" value="2" /><label class="full" for="star7"></label>
                                    <input type="radio" id="star6"  class="star3" value="1" /><label class="full" for="star6"></label>
                                </fieldset>
                            </div>
                            <div>
                                <label>De 0-5 Estrelas, referente as condicões do estabelecimento, qualifique-nos!</label>
                                <fieldset class="rating">
                                    <input type="hidden" id="NotaCondicoesFisicasEstabelecimento" name="NotaCondicoesFisicasEstabelecimento">
                                    <input type="radio" id="star5" class="star4" value="5" /><label class="full" for="star5"></label>
                                    <input type="radio" id="star4" class="star4" value="4" /><label class="full" for="star4"></label>
                                    <input type="radio" id="star3" class="star4" value="3" /><label class="full" for="star3"></label>
                                    <input type="radio" id="star2" class="star4" value="2" /><label class="full" for="star2"></label>
                                    <input type="radio" id="star1" class="star4" value="1" /><label class="full" for="star1"></label>
                                </fieldset>
                            </div>
                            <div>
                                <label>Você voltaria novamente para efetuar um outro agendamento?</label>
                                <!-- Material inline 1 -->
                                <div class="form-check form-check-inline">
                                    <input type="hidden" id="VoltariaNovamente" name="VoltariaNovamente" />
                                    <input type="radio" class="form-check-input" id="rdbVoltariaNovamente1" name="rdbVoltariaNovamente1">
                                    <label class="form-check-label" for="VoltariaNovamente">Sim</label>                                                        
                                   
                                    <input type="radio" class="btnVoltariaNovamente form-check-input" id="rdbVoltariaNovamente2" name="rdbVoltariaNovamente1">
                                    <label class="form-check-label" for="VoltariaNovamente">Não</label>
                                </div>
                            </div>
                            <div>
                                <label>Você recomendaria esse agendamento para outra pessoa?</label>
                                <!-- Material inline 1 -->
                                <div class="form-check form-check-inline">
                                    <input type="hidden" id="RecomendariaAlguem" name="RecomendariaAlguem" />
                                    <input type="radio" class="form-check-input" id="rdbRecomendariaAlguem1" name="rdbRecomendariaAlguem1">
                                    <label class="form-check-label" for="RecomendariaAlguem">Sim</label>
                               
                                    <input type="radio" class="form-check-input" id="rdbRecomendariaAlguem2" name="rdbRecomendariaAlguem1">
                                    <label class="form-check-label" for="RecomendariaAlguem">Não</label>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="modal-avaliar-salvar">Avaliar</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
</div>

