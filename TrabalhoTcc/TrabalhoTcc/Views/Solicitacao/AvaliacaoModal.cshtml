@model TrabalhoTcc.Models.Avaliacao
@{
    Layout = null;
}
<div class="modal" tabindex="-1" role="dialog" id="modal-avaliacao">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Agendar Solicitação</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="AgendamentoId" name="AgendamentoId" value="@ViewBag.AvaliacaoId" />
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Avaliação: </label>
                            @Html.TextBoxFor(m => m.AvaliacaoUsuario, new { @class = "form-control"} )
                            @Html.ValidationMessageFor(model => model.AvaliacaoUsuario, "", new { @class = "text-danger" })
                            <select class="mdb-select">
                                <option value="" disabled selected>Choose your option</option>
                                <option value="1">Option 1</option>
                                <option value="2">Option 2</option>
                                <option value="3">Option 3</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                         
                            @*@Html.TextBoxFor(m => m.DataHoraFinal, new { @class = "form-control", @type = "date" })*@
                            @*@Html.ValidationMessageFor(model => model.DataHoraFinal, "", new { @class = "text-danger" })*@
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="form-group">
                    <label>De uma nota de 0-5, você voltaria novamente?</label>
                        <div class="row lead">
                            <div id="stars" class="starrr"></div>
                                Você nos deu um total de <span id="count">0</span> estrela(s)
                        </div>
                        </div>
                  </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="modal-avaliar-salvar">Avaliar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
