@model TrabalhoTcc.Models.Solicitacao

@{
    ViewBag.Title = "Delete";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>...</title>

    <link rel="stylesheet" type="text/css" href="~/Content/font-awesome.css" />
    <link href="~/Content/css/style.css" type="text/css" rel="stylesheet" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
    <link href="~/Content/fullcalendar/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar fixed-top navbar-expand-md navbar-dark bg-dark scrolling-navbar">
        <div class="container">
            <!-- Brand -->
            <a class="navbar-brand" href="#" target="_blank">
                <strong>Salão e barbearia</strong>
            </a>
            <!-- Collapse -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Links -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <!-- Left -->
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item">
                        <a class="nav-link" href="#" target="_blank">Meus Agendamentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" target="_blank"> Minhas Avaliações</a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>
    <div class="container mt-4 mb-3">
        <h3 class="text-left">Deseja realmente deletar esse registro?</h3>
        <div class="row mt-5">
            <div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Cliente.Nome)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Cliente.Nome)
                    </dd>

                    <dt>
                        @Html.DisplayName("Funcionário:")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Funcionario.Nome)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DataHoraInicio)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DataHoraInicio)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DataHoraFinal)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DataHoraFinal)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Descricao)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Deletar" class="btn btn-default" /> |
                        @Html.ActionLink("Cancelar", "Index")
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>