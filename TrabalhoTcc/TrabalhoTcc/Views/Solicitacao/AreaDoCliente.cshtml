@model TrabalhoTcc.Models.Avaliacao
@{
    Layout = "~/Views/Shared/Master.cshtml";
}


<br />
<br />
<div class="container mt-lg-5 mb-3 mt-5">
    <div class="row mt-4">
        <input type="hidden" id="clienteId" name="clienteId" value="@ViewBag.ClienteId" />
        <table class="table table-striped table-hover">

            <thead class="thead-dark">
                <tr>
                    <th scope="col">Seus agendamentos</th>
                    <th>
                        <a href="/Solicitacao/Agendamento">
                            <i class="text-white">
                                Fazer Agendamento
                            </i>
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody scope="row">
                @if (ViewBag.AgendamentosParaAvaliar != null)
                {
                    foreach (var agendamento in ViewBag.AgendamentosParaAvaliar)
                    {
                        <tr>
                            <td>
                                <blockquote>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <h4> @agendamento.Funcionario.Nome</h4>
                                            <hr />
                                        </div>
                                        <div class="col-md-9">
                                            <label>@agendamento.Situacao</label>
                                            <label>@agendamento.DataHoraInicio</label>
                                            <label>@agendamento.DataHoraFinal</label>
                                        </div>
                                    </div>
                                </blockquote>
                            </td>
                            <td scope="col">
                                @if (agendamento.Situacao != "Pendente")
                                {
                                    <div class="mt-3" style=" margin-top: 22%;">
                                        <a href="#" data-id="@agendamento.Id" class="btnRealizarAvaliacao btn btn-success">Realizar avaliação</a>
                                    </div>
                                }
                                else
                                {
                                    <div class="mt-3" style=" margin-top: 22%;">
                                        <a href="#" class="btn btn btn-danger disabled">Não é possivel avaliar um agendamento pendente</a>
                                    </div>
                                }

                            </td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot class="thead-dark">
                <tr>
                    <th scope="col"> Seus agendamentos</th>
                    <th>
                        <a href="/Solicitacao/Agendamento">
                            <i class="text-white">
                                Fazer Agendamento
                            </i>
                        </a>
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
