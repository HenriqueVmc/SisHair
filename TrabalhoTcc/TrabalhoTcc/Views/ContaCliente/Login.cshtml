@{

    Layout = "/Views/Shared/Master.cshtml";
}

<div class="container mt-3 mb-3">
    <div class="row">
        <!--Parte de baixo = Cadastro de cliente-->
        <div class="col-md-12">
            <h3 class="text-center">Informe seu Usuário e Senha</h3>
        </div>
        <div class="col-md-4"></div>
        <div class="col-md-4 mt-4">
            <form action="/Login/Entrar" class="form-horizontal" method="post">
                <div class="form-group">
                    <label for="campo-usuario">Usuário:</label>
                    <input type="text" class="form-control" name="LoginCliente.Usuario" id="campo-usuario" />
                </div>

                <div class="form-group">
                    <label for="campo-senha">Senha:</label>
                    <input type="password" class="form-control" name="LoginCliente.Senha" id="campo-senha" />
                </div>
                <hr />
                <div class="row">
                    <div class="offset-5">

                        <div class="form-group">
                            <a href="/Home/SolicitarAgendamento" class="btn btn-success mt-3">Entrar</a>
                            <a href="/ContaCliente/CriarConta" class="btn btn-success mt-3">Criar conta</a>
                        </div>



                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>