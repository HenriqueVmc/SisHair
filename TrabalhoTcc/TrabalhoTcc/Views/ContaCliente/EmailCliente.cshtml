@model TrabalhoTcc.Models.Cliente
@{
    Layout = null;
}

<div class="container mt-3 mb-3">

    <div class="row">
        <div class="col-md-4 mt-4">
            @using (Html.BeginForm("EmailCliente", "ContaCliente", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label for="campo-usuario">Usuário:</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>

                <div class="row">
                    <div class="offset-5">

                        <div class="form-group">
                            <button type="submit" class="btn btn-outline-success" name="btnEnviar" id="btnEnviar">
                                <i class="fa fa-save"> Entrar</i>
                            </button>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>
