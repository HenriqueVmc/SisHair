@model TrabalhoTcc.Models.Conta.VerificarCodigo
@{
    Layout = "/Views/Shared/Master.cshtml";
}


    <div class="container col-12 mt-5">

    <div class="row offset-4">
        <div class="col-6">
            @using (Html.BeginForm("VerificarCodigo", "ContaCliente", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group mt-4">
                    <label for="campo-usuario">CODIGO:</label>
                    @Html.TextBoxFor(m => m.CodigoRetorno, new { @class = "form-control" })
                </div>

                <div class="row mt-2 mr-5">
                    <div class="offset-5">

                        <div class="form-group">
                            <button type="submit" class="btn btn-outline-success" name="btnEnviar" id="btnEnviar">
                                <i class="fa fa-save"> Confrimar</i>
                            </button>
                        </div>

                    </div>
                </div>
            }
        </div>
        <div class="col-md-4"></div>

    </div>
</div>
<div class="container mt-5">
    <div class="row col-12">
        <div class="col-md-12">
        </div>
        <div class="col-md-4"></div>

        <div class="col-md-4 mt-4">
           @using (Html.BeginForm("VerificarCodigo", "ContaCliente", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
           {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <h1>Recuperar Senha</h1>
                    <label for="campo-usuario">Digite seu E-mail:</label>
                    @Html.TextBoxFor(m => m.CodigoRetorno, new { @class = "form-control" })
                    <div class="offset-3">
                        <button type="submit" class="btn btn-outline-success" name="btnEnviar" id="btnEnviar">
                            <i class="fa fa-location-arrow"> Enviar</i>
                        </button>
                    </div>
                </div>

                <div class="row">

                    <div class="form-group">

                    </div>
                </div>
            }
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
