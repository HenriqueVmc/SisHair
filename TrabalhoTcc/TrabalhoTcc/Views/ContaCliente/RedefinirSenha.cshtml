@model TrabalhoTcc.Models.Conta.NovaSenha
@{
    Layout = null;
}

<div class="container mt-3 mb-3">

    <div class="row">
        <div class="col-md-4 mt-4">
            @using (Html.BeginForm("RedefinirSenha", "ContaCliente", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div><h2>Digite uma nova senha</h2></div>
                <div class="form-group">
                    <label for="campo-senha">Senha</label>
                    @Html.TextBoxFor(m => m.Senha, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="campo-senha">Senha</label>
                    @Html.TextBoxFor(m => m.ConfirmarSenha, new { @class = "form-control" })
                </div>

                <div class="row">
                    <div class="offset-5">

                        <div class="form-group">
                            <button type="submit" class="btn btn-outline-success" name="btnEnviar" id="btnEnviar">
                                <i class="fa fa-save"> Entrar</i>
                            </button>
                        </div>

                    </div>
                </div>
            }
        </div>
        <div class="col-md-4"></div>

    </div>
</div>
