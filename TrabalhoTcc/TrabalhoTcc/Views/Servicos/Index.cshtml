@model IEnumerable<TrabalhoTcc.Models.Servico>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MasterAdiministrador.cshtml";
}

<div class="offset-2">
    <h2 class="text-center">Serviços:</h2>
    <div class="row">
        <div class="col-md-8">
            <p>
                <a href="@Url.Action("Cadastrar")" class="btn btn-success">
                    <span class="fa fa-plus "></span> Serviço
                </a>
                <a href="@Url.Action("ExportExcel")" class="btn btn-outline-success">
                    <span class="fa fa-download "></span> Exportar para Excel
                </a>
            </p>
        </div>
        <div class="col-md-4">
            <input type="text" id="pesquisa" name="pesquisa" placeholder="Pesquise por uma palavra-chave" class="form-control">
        </div>
    </div>

    <table class="table table-striped" id="tableServicos" number-per-page="5" current-page="0">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duracao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>Ações:</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <input type="hidden" id="Id" namw="Id" value="@item.Id" />
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duracao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.ActionLink(" Editar", "Editar", "Servicos", new { id = item.Id }, new { @class = "fa fa-pencil btn btn-outline-dark" })
                        @Html.ActionLink(" Detalhes", "Detalhes", "Servicos", new { id = item.Id }, new { @class = "fa fa-file btn btn-outline-primary" })
                        @Html.ActionLink(" Deletar", "Deletar", "Servicos", new { id = item.Id }, new { @class = "fa fa-trash btn btn-outline-danger" })
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duracao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>Ações:</th>
            </tr>
        </tfoot>

    </table>

</div>