@model TrabalhoTcc.Models.Avaliacao
@{    
    Layout = "~/Views/Shared/Master.cshtml";
}

<div class="container mt-3 mb-3">
   <div class="row">
       <input type="hidden" id="clienteId" name="clienteId" value="@ViewBag.ClienteId" />
       <table class="table table-striped table-hover">

           <thead class="thead-dark">
               <tr>
                   <th scope="col">Seus agendamentos</th>
                   <th href="/Solicitacao/Agendamento">Fazer Agendamento</th>
               </tr>
           </thead>
           <tbody scope="row">
               @foreach (var agendamento in ViewBag.AgendamentosParaAvaliar)
               {
                   <tr>
                       <td>
                           <blockquote>
                               <div class="row">
                                <div class="col-md-3">
                                    <h4> @agendamento.funcionario</h4>
                                    <hr />
                                </div>
                                   <div class="col-md-9">
                                       <label>@agendamento.Situacao</label>
                                       <label>@agendamento.DataHoraInicio</label>
                                       <label>@agendamento.DataHoraFinal</label>
                                   </div>                                   
                               </div>
                           </blockquote>
                       </td>
                       <td scope="col">
                           <div class="mt-3" style=" margin-top: 22%;">
                            <a href="#" data-id="@agendamento.Id" class="btnSolicitar btn btn-success">Solicitar Agendamento</a>
                           </div>
                       </td>
                   </tr>
               }
           </tbody>
           <tfoot class="thead-dark">
               <tr>
                   <th scope="col"> Seus agendamentos</th>
                   <th href="/Solicitacao/Agendamento">Fazer Agendamento</th>
               </tr>
           </tfoot>
       </table>
   </div>
</div>

