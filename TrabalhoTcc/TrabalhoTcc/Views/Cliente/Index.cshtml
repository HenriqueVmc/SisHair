@model IEnumerable<TrabalhoTcc.Models.Cliente>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MasterAdiministrador.cshtml";
}

<div class="offset-2">

    <h2 class="text-center">Clientes:</h2>

    <div class="row">
        <div class="col-md-8">
            <p>
                <a href="@Url.Action("Cadastrar")" class="btn btn-success">
                    <span class="fa fa-plus "></span> Cliente
                </a>
                <a href="@Url.Action("ExportExcel")" class="btn btn-outline-success">
                    <span class="fa fa-download "></span> Exportar para Excel
                </a>
            </p>
        </div>
        <div class="col-md-4">
            <input type="text" id="pesquisa" name="pesquisa" placeholder="Pesquise por uma palavra-chave" class="form-control">
        </div>
    </div>

    <table class="table table-striped" id="tableCliente" number-per-page="5" current-page="0">
        <thead class="thead-dark">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data_nascimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Celular)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>Ações: </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <input type="hidden" id="Id" namw="Id" value="@item.Id" />
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data_nascimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Celular)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Editar", "Cliente", new { id = item.Id }, new { @class = "fa fa-pencil btn btn-dark" })
                       
                        @Html.ActionLink(" ", "Deletar", "Cliente", new { id = item.Id }, new { @class = "fa fa-trash btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data_nascimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Celular)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>Ações:</th>
            </tr>
        </tfoot>
    </table>
</div>
