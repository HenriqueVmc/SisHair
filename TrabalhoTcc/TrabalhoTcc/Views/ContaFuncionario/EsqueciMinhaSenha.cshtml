
@{
    ViewBag.Title = "Esqueci minha Senha";
    Layout = "~/Views/Shared/Master.cshtml";
}
@section styles{
    <link href="~/Content/css/style.css" rel="stylesheet" />
}
<div class="container mt-3 mb-3">

    <div class="row">

        <!--Parte de baixo = Cadastro de cliente-->
        <div class="col-md-12 mt-5">

            <h1 class="text-center">Redefinir Senha</h1>
            <h3 class="text-center">Informe seu Email e CPF:</h3>
        </div>
        <div class="col-md-4"></div>
        <div class="col-md-4 mt-4">
            @using (Html.BeginForm("EsqueciMinhaSenha", "ContaFuncionario", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                if (ViewBag.EmailEnviado)
                {
                    <div class="alert alert-success">
                        <strong>Sucesso!</strong> Um e-mail com o link de redefinição da sua senha foi enviado para a sua caixa de e-mail.
                    </div>
                }
                else
                {
                    <div class="form-group">
                        @Html.Label("Email: ", new { @class = "control-label" })
                        <input type="text" id="email" name="email" class="form-control" />
                        <p id="emailValidation" name="emailValidation"></p>
                    </div>
                    <div class="form-group">
                        @Html.Label("CPF: ", new { @class = "control-label" })
                        <input type="text" id="CpfLogin" name="CpfLogin" class="form-control" />
                    </div>


                    <hr />
                    <div class="text-center">

                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">
                                Enviar
                            </button>
                        </div>

                    </div>
                }
            }
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/funcionario/login/index.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

}