@model TrabalhoTcc.Models.Conta.LoginFuncionario

@{
    ViewBag.Title = "AlterarLogin";
    Layout = "~/Views/Shared/MasterAdiministrador.cshtml";
}

@* new { id = "signupform" } *@

<div class="offset-2">
    <h2>AlterarLogin</h2>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmAlterarLogin" }))    
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>LoginFuncionario</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Usuario, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })*@
                    <input type="text" id="usuario" name="usuario"/>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" id="senha" name="senha" />
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Usuario, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })*@
                    <input type="text" id="novoUsuario" name="novoUsuario" />
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" id="novaSenha" name="novaSenha" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <a href="#" id="btnSalvar btn btn-success">Salvar</a>
                    @*<input type="submit" value="Savar" class="btn btn-default" />*@
                </div>
            </div>
        </div>
    }
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
