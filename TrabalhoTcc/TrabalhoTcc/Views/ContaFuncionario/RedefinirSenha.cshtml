@model TrabalhoTcc.Models.Conta.LoginFuncionario
@{
    ViewBag.Title = "Redefinir Senha";
    Layout = "~/Views/Shared/Master.cshtml";
}
@section styles{
    <link href="~/Content/css/style.css" rel="stylesheet" />
}

<div class="container mt-3 mb-3">

    <div class="row">

        <!--Parte de baixo = Cadastro de cliente-->
        <div class="col-md-12 mt-5">

            <h1 class="text-center">Redefinir Senha</h1>
            <h3 class="text-center">Informe uma nova Senha:</h3>
        </div>
        <div class="col-md-4"></div>
        <div class="col-md-4 mt-4">
            @using (Html.BeginForm("RedefinirSenha", "ContaFuncionario", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(m => m.Usuario)
                if (ViewBag.Mensagem != null)
                {
                    <div class="alert alert-success">
                        <strong>@ViewBag.Mensagem</strong> <a href="/ContaFuncionario/Login"> Realizar Login</a>
                    </div>
                }
                else
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.Senha, new { @class = "control-label" })<span class="text-danger"> *</span>
                        @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Confirmar Senha:", new { @class = "control-label" })<span class="text-danger"> *</span>
                        <input type="password" id="ConfirmarSenha" name="ConfirmarSenha" class="form-control" />
                        @Html.ValidationMessage("ConfirmarSenha", "", new { @class = "text-danger" })
                    </div>
                    <hr />
                    <div class="text-center">
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">
                                Salvar
                            </button>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
